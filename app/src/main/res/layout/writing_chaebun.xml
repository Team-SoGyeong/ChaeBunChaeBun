<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:showIn="@layout/writing_chaebun_frame"
    tools:context=".WritingChaebunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- View -->
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:background="@drawable/up"/>

        <!-- 영수증 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="영수증을 추가해 보세요!" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="영수증을 추가하면 영수증 인증 마크를 드려요!" />
        <ImageButton
            android:id="@+id/add_receipt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_search" />

        <!-- 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="제목을 적어 주세요" />
        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/signup_edittext"
            android:textSize="14sp"
            android:paddingLeft="9dp"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:hint="채분할 사람 오여라!" />

        <!-- 소개글 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="채분에 대해 소개해 주세요" />
        <EditText
            android:id="@+id/input_content"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/signup_edittext"
            android:textSize="14sp"
            android:paddingLeft="9dp"
            android:backgroundTint="#f4f6f2"
            android:hint="우리 가족들이 먹을 거라 좋은 걸로 골랐어요~" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="303dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="10dp"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="(0/500)" />

        <!-- 상세 정보 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="더 자세한 정보를 입력해 주세요" />
        <include layout="@layout/writing_chaebun_detail"/>
        <!-- 그리드 렉이 너무 심해서 xml 나눠봄
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/roboto_bold"
            android:text="구매 날짜"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="총 구매양"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="구매 가격"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="소분 멤버"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_date"
            android:layout_width="200dp"
            android:layout_height="29dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/input_amount"
            android:layout_width="138dp"
            android:layout_height="29dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/input_getPrice"
            android:layout_width="176dp"
            android:layout_height="29dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/input_memberNum"
            android:layout_width="176dp"
            android:layout_height="29dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="1  명 당"
            android:textColor="#000000"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/input_point"
            android:layout_width="50dp"
            android:layout_height="29dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="-49dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="원"
            android:textColor="#000000"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="명"
            android:textColor="#000000"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/set_price"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="-130dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="원"
            android:textColor="#000000"
            android:textSize="12sp" />
        </GridLayout>
        -->

        <!-- 연락 방법 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="원하는 연락 방법을 적어주세요" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="참여하기를 누른 사용자만 받을 수 있는 연락망이에요!" />
        <EditText
            android:id="@+id/input_call"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/signup_edittext"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:backgroundTint="#f4f6f2"
            android:hint="소분을 위해 언제, 어느 시간대에 만날지 정하기 위함이니 제일 편한 연락망을 써주세요!\nex) 카카오톡 아이디, 오픈 카톡 링크, 인스타 아이디" />

        <!-- 하단 버튼 -->
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/group_707" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/group_708" />
    </LinearLayout>
</ScrollView>