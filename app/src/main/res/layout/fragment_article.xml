<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ArticleFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/category_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/group_84"/>
            <TextView
                android:id="@+id/tv_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="채소"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/ic_complete"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/group_778"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/type_filled_icon_favorite_gray"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/article_proile_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_categorylist_profileimg"
                    android:src="@drawable/logo"
                    android:scaleType="fitCenter"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:id="@+id/article_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="닉네임"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:fontFamily="@font/roboto_regular"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="11dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/type_filled_icon_verified"/>
                <TextView
                    android:id="@+id/article_writing_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="11dp"
                    android:text="00/00"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_regular"
                    android:includeFontPadding="false"/>
                <ImageButton
                    android:id="@+id/article_modalbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/fix_delete_btn"
                    android:scaleType="fitCenter"
                    android:background="@color/white"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/article_recycler_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:background="#ebebeb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/group_760"/>
                    <TextView
                        android:id="@+id/article_buying_date"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="10dp"
                        android:text="구매 날짜"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@drawable/group_761"/>
                    <TextView
                        android:id="@+id/article_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="무게와 가격"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@drawable/group_698"/>
                    <TextView
                        android:id="@+id/article_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_gravity="center"
                        android:text="인원"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@drawable/group_700"/>
                    <TextView
                        android:id="@+id/article_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="인당 금액"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:text="내용"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#ebebeb"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/article_comment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <EditText
        android:id="@+id/article_comment"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp"
        android:padding="10dp"
        android:background="@drawable/category_warning_box"
        android:hint="이웃에게 따뜻한 댓글을 달아보세요."
        android:textColor="#999999"
        android:textSize="12sp"
        android:textAlignment="textStart"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"/>
</LinearLayout>