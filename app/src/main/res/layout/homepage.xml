<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_drawer"
    tools:context=".HomeActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="#036635">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_map"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/slice_4"/>
                <TextView
                    android:layout_width="34dp"
                    android:layout_height="14dp"
                    android:fontFamily="@font/roboto_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:text="지역"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textColor="#f0f4ed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="채분채분" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/ic_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slice_6"/>
                <ImageView
                    android:id="@+id/ic_notice"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/slice_10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_search"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#f4f6f2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="채분할 채소를 검색해 보세요!" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_search"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="신선한 채분을 둘러보세요"/>
    <Gallery
        android:id="@+id/main_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:spacing="5dp" />
    <ImageButton
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/group_703"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/black"
        app:tabTextAppearance="@style/tab_text"
        app:tabSelectedTextColor="@color/black"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="#036635"
        app:tabIndicatorHeight="1dp">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>