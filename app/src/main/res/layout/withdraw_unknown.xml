<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <!-- TopView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="@drawable/writing_btn_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginLeft="-44dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="탈퇴하기" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>

        <!-- View -->
        <LinearLayout
            android:id="@+id/unknown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/check_unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/checkbox_on" />
            <TextView
                android:id="@+id/text_unknown"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:textColor="#036635"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="모집했는데 사람이 많이 안 모여요" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="정성스럽게 글을 작성해 사람들을 모집했는데 생각처럼\n모이지 않아 많이 속상하셨겠어요 :(\n하지만 채분을 통해 환경과 우리 모두에게 좋은 일을 하려는\n분분님의 마음은 충분히 전해졌어요!\n함께 소분할 이웃들을 기다려 봤으니, 이번엔 분분님이\n채소가 필요한 이웃에게 기부를 통해 먼저 다가가 보는건\n어떠세요? 적은 양의 채소라도 문제 없이 소외계층 이웃들\n에게 잘 전달될 수 있답니다!" />

        <ImageButton
            android:id="@+id/btn_donate"
            android:layout_width="320dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/frame_donate" />
    </LinearLayout>
</LinearLayout>