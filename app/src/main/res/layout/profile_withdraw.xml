<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <!-- TopView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="@drawable/group_84"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginLeft="-44dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="탈퇴하기" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <!-- View -->
        <TextView
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="33dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="분분님.. 탈퇴하시려구요?" />
        <TextView
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="탈퇴할 생각이 드셨다니 너무 아쉬워요:(\n저희에게 탈퇴를 결심한 이유를 알려주시면 분분님이 돌아 오셨을\n때까지 고쳐 놓기 위해 열심히 노력할게요!" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <LinearLayout
            android:id="@+id/little"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/check_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/checkbox_off" />
            <TextView
                android:id="@+id/text_little"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:textColor="#999999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="채분이 많이 없어요" />
            <ImageButton
                android:id="@+id/next_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_arrow" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <LinearLayout
            android:id="@+id/unknown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/check_unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/checkbox_off" />
            <TextView
                android:id="@+id/text_unknown"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:textColor="#999999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="모집했는데 사람이 많이 안 모여요" />
            <ImageButton
                android:id="@+id/next_unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <LinearLayout
            android:id="@+id/no_manner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/check_no_manner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/checkbox_off" />
            <TextView
                android:id="@+id/text_no_manner"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:textColor="#999999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="다른 사용자로 인해 기분이 상했어요" />
            <ImageButton
                android:id="@+id/next_no_manner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <LinearLayout
            android:id="@+id/etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/check_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/checkbox_off" />
            <TextView
                android:id="@+id/text_etc"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:textColor="#999999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="기타" />
            <ImageButton
                android:id="@+id/next_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_arrow" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <ImageButton
            android:id="@+id/btn_withdraw"
            android:layout_width="320dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="171dp"
            android:background="@drawable/group_withdraw" />
    </LinearLayout>

</LinearLayout>