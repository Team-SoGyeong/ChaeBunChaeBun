<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".WritingChaebunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- View -->
            <!-- 사진 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="채소의 사진을 추가해 주세요!" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="3dp"
                android:textColor="#999999"
                android:textSize="10sp"
                android:text="사진은 한장씩 첨부되며 총 5장 넣을 수 있어요!" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/change_add_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/writing_btn_picture" />

                <include layout="@layout/writing_chaebun_picture"/>

            </LinearLayout>
        </LinearLayout>
        <!-- 영수증 -->
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="영수증을 추가해 보세요!" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="영수증을 추가하면 영수증 인증 마크를 드려요!" />
        <ImageButton
            android:id="@+id/add_receipt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/writing_btn_receipt" />
        <include layout="@layout/writing_chaebun_bill"/>-->
        <!-- 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="제목을 적어 주세요" />
        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/signup_edittext"
            android:textSize="14sp"
            android:paddingLeft="9dp"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:hint="채분할 사람 모여라!" />

        <!-- 소개글 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="채분에 대해 소개해 주세요" />
        <EditText
            android:id="@+id/input_content"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:background="@drawable/signup_edittext"
            android:textSize="14sp"
            android:paddingLeft="9dp"
            android:paddingTop="10dp"
            android:backgroundTint="#f4f6f2"
            android:gravity="top"
            android:hint="우리 가족들이 먹을 거라 좋은 걸로 골랐어요~" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/input_content_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"
                android:paddingRight="2dp"
                android:textAlignment="viewEnd"
                android:textColor="#999999"
                android:textSize="10sp"
                android:text="(0/500)" />
        </LinearLayout>

        <!-- 상세 정보 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="더 자세한 정보를 입력해 주세요" />
        <include layout="@layout/change_chaebun_detail"/>

        <!-- 연락 방법 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="원하는 연락 방법을 적어주세요" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="참여하기를 누른 사용자만 받을 수 있는 연락망이에요!" />
        <EditText
            android:id="@+id/input_call"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:background="@drawable/signup_edittext"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:backgroundTint="#f4f6f2"
            android:gravity="top"
            android:hint="소분을 위해 언제, 어느 시간대에 만날지 정하기 위함이니 제일 편한 연락망을 써주세요!\nex) 카카오톡 아이디, 오픈 카톡 링크, 인스타 아이디" />

        <!-- 하단 버튼 -->
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/writing_btn_ok" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/writing_btn_backlast" />
    </LinearLayout>
</ScrollView>