<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetNicknameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="104dp"
        android:textColor="#036635"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="안녕하세요! \n채분채분에 오신걸 환영해요!" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="이제 채분채분에서 사용할 닉네임을 정해보세요!" />
    <EditText
        android:id="@+id/set_nickname"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/profile_edittext"/>
    <TextView
        android:id="@+id/set_invaild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="21dp"
        android:textColor="#9a9792"
        android:textSize="12sp"
        android:text="*특수문자, 이모티콘은 사용 불가합니다." />
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="95dp"
        android:background="@drawable/do_button_long" />
</LinearLayout>