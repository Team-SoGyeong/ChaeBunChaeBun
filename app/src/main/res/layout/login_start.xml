<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#f4f6f2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"
        android:layout_marginTop="106dp"
        android:textColor="#036635"
        android:textSize="30sp"
        android:text="채분채분" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:textColor="#999999"
        android:textSize="16sp"
        android:text="환경을 향한 한 걸음의 시작" />
    <EditText
        android:id="@+id/input_id"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="191dp"
        android:layout_gravity="center"
        android:hint="이메일을 입력하세요"/>
    <EditText
        android:id="@+id/input_pw"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:hint="비밀번호를 입력하세요"/>
    <ImageButton
        android:id="@+id/sign_in"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/loginbtn" />
    <ImageButton
        android:id="@+id/sign_up"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/go_signupbtn" />
    <ImageButton
        android:id="@+id/set_invaild"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@drawable/group_763" />
    <ImageButton
        android:id="@+id/loginV1"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/kakao_login_medium_wide"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />
</LinearLayout>