<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_list_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/search_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="13dp"
            android:text="제목"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_regular"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/search_list_receipt"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/categorylist_img_verified"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<TextView
            android:id="@+id/search_list_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="구매 날짜"
            android:textSize="12sp"
            android:textColor="#999999"
            android:textAlignment="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginLeft="22dp"
            android:background="#999999"/>
        <TextView
            android:id="@+id/search_list_people"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/roboto_regular"
            android:text="인원"
            android:textSize="12sp"
            android:textColor="#999999"
            android:textAlignment="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginLeft="24dp"
            android:background="#999999"/>
        <TextView
            android:id="@+id/search_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/roboto_regular"
            android:text="가격"
            android:textSize="12sp"
            android:textColor="#999999"
            android:textAlignment="center"/>-->
        <TextView
            android:id="@+id/searchlist_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="글 내용"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:maxWidth="270dp"
            android:maxLines="2"
            android:ellipsize="end"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/search_list_postdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="날짜"
            android:textSize="12sp"
            android:textColor="#999999"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>