<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetLocationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="104dp"
        android:textColor="#036635"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="우리 동네를 설정해 보세요!" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="채분을 모집하고, 채분에 참여할 우리 동네를 \n버튼을 눌러 설정해 보세요!" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="현재 위치" />
        <EditText
            android:id="@+id/set_location"
            android:layout_width="259dp"
            android:layout_height="36dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edittext"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="95dp"
        android:background="@drawable/do_button_long" />
</LinearLayout>