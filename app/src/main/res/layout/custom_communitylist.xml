<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:id="@+id/community_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/community_profileimg"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="centerInside"/>
        <!--android:background="@drawable/locationdialog_img_mumu"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/community_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="닉네임"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/community_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="날짜"
                android:textSize="11sp"
                android:textColor="#999999"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/community_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:background="@color/white"
            android:src="@drawable/home_img_location"/>
        <TextView
            android:id="@+id/community_location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="지역"
            android:textSize="10sp"
            android:textColor="#4d4d4d"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:id="@+id/community_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:text="글 내용"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:maxWidth="300dp"
        android:maxLines="3"
        android:ellipsize="end"/>
    <HorizontalScrollView
        android:id="@+id/community_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/community_img1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/custom_categorylist_contentimg"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/community_img2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/custom_categorylist_contentimg"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/community_img3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/custom_categorylist_contentimg"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/community_img4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/custom_categorylist_contentimg"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/community_img5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/custom_categorylist_contentimg"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/community_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/communitylist_btn_like"/>
        <TextView
            android:id="@+id/community_like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="10sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/communitylist_img_comment"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/community_comment_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="10sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light"/>
</LinearLayout>