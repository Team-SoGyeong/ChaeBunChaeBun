<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:gravity="center"
    android:id="@+id/community_picture_view"
    android:scrollbars="none">
<!---    android:visibility="gone"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/main_img_frame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="1dp"
                android:background="@drawable/custom_writing_picture_box"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/etc_main_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <ImageView
                android:visibility="invisible"
                android:id="@+id/etc_main_img_delete"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/writing_btn_subpicture"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/sub_img1_frame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="1dp"
                android:background="@drawable/custom_writing_picture_box"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/etc_sub_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/etc_sub_img1_delete"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/writing_btn_subpicture" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/sub_img2_frame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="1dp"
                android:background="@drawable/custom_writing_picture_box"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/etc_sub_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            </LinearLayout>
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/etc_sub_img2_delete"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/writing_btn_subpicture"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/sub_img3_frame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="1dp"
                android:background="@drawable/custom_writing_picture_box"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/etc_sub_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            </LinearLayout>
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/etc_sub_img3_delete"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/writing_btn_subpicture"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/sub_img4_frame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="1dp"
                android:background="@drawable/custom_writing_picture_box"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/etc_sub_img4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            </LinearLayout>
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/etc_sub_img4_delete"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/writing_btn_subpicture"/>
        </RelativeLayout>
    </LinearLayout>
</HorizontalScrollView>