<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageProfileActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <!-- TopView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="@drawable/group_84"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginLeft="-44dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="프로필 관리" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="29dp"
                android:src="@drawable/frame_538"
                />
            <ImageView
                android:id="@+id/profile_addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="74dp"
                android:layout_marginLeft="58dp"
                android:layout_marginBottom="29dp"
                android:src="@drawable/picture_add_btn" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/profile_nickname"
                    android:layout_width="244dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="13dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:textSize="12dp"
                    android:background="@drawable/profile_edittext" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="201dp"
                    android:layout_marginTop="11dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:text="0/10" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="231dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/btn_all_clean"/>
            </RelativeLayout>
            <Button
                android:id="@+id/profile_btnChange"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:text="변경"/>
        </LinearLayout>
        <TextView
            android:id="@+id/profile_invaild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:padding="14dp"
            android:textColor="#9a9792"
            android:textSize="12sp"
            android:text="*특수문자, 이모티콘은 사용 불가합니다." />
        <!-- View -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#e5e5e5"/>

        <TextView
            android:id="@+id/profile_info"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="내 정보" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <TextView
            android:id="@+id/profile_logout"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="로그아웃 하기" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        <TextView
            android:id="@+id/profile_withdraw"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="right"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="탈퇴하기" />
    </LinearLayout>

</LinearLayout>