<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="3"
    android:rowCount="4"
    tools:showIn="@layout/writing_chaebun">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/roboto_bold"
            android:text="구매 날짜"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="총 구매양"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="구매 가격"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="소분 멤버"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_date"
            android:layout_width="200dp"
            android:layout_height="29dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/input_amount"
            android:layout_width="138dp"
            android:layout_height="29dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/input_getPrice"
            android:layout_width="176dp"
            android:layout_height="29dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/input_memberNum"
            android:layout_width="176dp"
            android:layout_height="29dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="1  명 당"
            android:textColor="#000000"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/input_point"
            android:layout_width="50dp"
            android:layout_height="29dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="-49dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="원"
            android:textColor="#000000"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="명"
            android:textColor="#000000"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/set_price"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="-130dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/signup_edittext"
            android:backgroundTint="#f4f6f2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="9dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="원"
            android:textColor="#000000"
            android:textSize="12sp" />
</GridLayout>